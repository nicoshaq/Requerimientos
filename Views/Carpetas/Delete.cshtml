    function (settings, data, dataIndex) {
        var min = parseInt($('#min').val(), 10);
        var max = parseInt($('#max').val(), 10);
        var fecha = parseFloat(data[3]) || 0; // use data for the age column

        if ((isNaN(min) && isNaN(max)) ||
             (isNaN(min) && fecha <= max) ||
             (min <= fecha && isNaN(max)) ||
             (min <= fecha && fecha <= max)) {
            return true;
        }
        return false;
    }
);





