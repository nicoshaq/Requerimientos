<script>
    $(document).ready(function () {
    $('.deleteUser').attr('href', 'javascript://');
    $('.deleteUser').click(function () {
        $dialog.data('Id', $(this).attr('Id')).data('Id', $(this).attr('Id')).dialog("open");
    });

    var $dialog = $('<div/>')
    .html("Warning: se borrará un usuario.<br/><br/>Desea continuar?")
    .dialog({
        autoOpen: false,
        resizable: false,
        height: 250,
        modal: true,
        title: 'borrar usuario',
        buttons: [
                    {
                        text: "Continue",
                        id: "continuebtn",
                        click: function () {
                            var _id = $(this).data('Id');
                            var _parameters = { userId: _id };
                            $.ajax({
                                url: "/Estado_requerimiento/DeletecarpetaReturnPartialView",
                                type: "GET",
                                data: _parameters,
                                success: function (data, textStatus, jqXHR) {
                                    $('#UserTable').html(data);
                                }
                            });
                            $(this).dialog('close');
                        }
                    },
                    {
                        text: "Cancelar",
                        id: "cancelbtn",
                        click: function () {
                            $(this).dialog("close");
                        }
                    }]
    });

    });
</script>
