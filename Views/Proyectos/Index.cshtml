@model IEnumerable<Requerimientos.Models.Proyectos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<style>
    .Activo {
        background-color: #1ab394;
        color: #FFFFFF;
    }

    .Inactivo {
        background-color: #f0ad4e;
        color: #FFFFFF;
    }

    .Cerrado {
        background-color: #ff0000;
        color: #FFFFFF;
    }



    </style>




<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Proyectos</h2>
        <ol class="breadcrumb">
           
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Proyectos</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Create", "Proyectos")" class="btn btn-primary btn-xs">NUevo Proyecto</a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-1">
                            <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> Refresh</button>
                        </div>
                        <div class="col-md-11">
                            <div class="input-group">
                                <input type="text" class="form-control input-sm m-b-xs" id="filter"
                                       placeholder="Buscar en toda la tabla">
                            </div>
                        </div>
                    </div>
                    <div class="project-list">
                        <table class="table table-hover footable"  data-filter=#filter>
                            <tbody>
                               
                               
                               
                               
                               
                              @foreach (var item in Model)
                              {
                             
                                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Idproyecto }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Idproyecto }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Idproyecto })*@
                                
                               
                              
                             
                               
                              
                                <tr>
                                    <td class="project-status">
                                        <span class="label @Html.DisplayFor(modelItem => item.Estado)">@Html.DisplayFor(modelItem => item.Estado)</span>
                                    </td>
                                    <td class="project-title">
                                        <a href="@Url.Action("Details", "Proyectos", new { id = item.Idproyecto })"> @Html.DisplayFor(modelItem => item.Titulo)
                                  </a>
                                        <br />
                                        <small>creado el:  @Html.DisplayFor(modelItem => item.Fecha)</small>
                                    </td>
                                    <td class="project-completion">
                                        <small>Creado por: @Html.DisplayFor(modelItem => item.Creadopor)</small>
                                        @*<div class="progress progress-mini">
                                            <div style="width: 28%;" class="progress-bar"></div>
                                        </div>*@
                                    </td>
                                    <td class="project-people">
                                        @Html.Raw(item.Descripcion)
                                    </td>
                                    @*<td class="project-actions">
                                        <a href="#" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>
                                        <a href="#" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a>
                                    </td>*@
                                </tr>

                              }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section Styles {
    @Styles.Render("~/plugins/footableStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/footable")
    <script type="text/javascript">
            $(document).ready(function () {

                $('.footable').footable();
                $('.footable2').footable();


            });
    </script>
}




























