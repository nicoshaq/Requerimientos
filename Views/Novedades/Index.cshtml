@model IEnumerable<Requerimientos.Models.Novedades>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}



<style>
    .Aceptado {
        background-color:#1ab394;
        color: #FFFFFF;
    }

    .Incosistente {
        background-color: #f0ad4e;
        color: #FFFFFF;
    }

    .Rechazado {
        background-color: #ff0000;
        color: #FFFFFF;
    }



    .Iniciado {
        background-color: #ffd800;
        color: #FFFFFF;
    }

    .Proceso {
        background-color: #0094ff;
        color: #FFFFFF;
    }

    .Finalizado {
        background-color:#1ab394;
        color: #FFFFFF;
    }
</style>


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Novedades</h2>
        <ol class="breadcrumb"></ol>
    </div>
</div>





<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Novedades</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <input type="text" class="form-control input-sm m-b-xs" id="filter"
                           placeholder="Buscar en toda la tabla">
                    <table class="footable table table-stripped" data-page-size="20" data-filter=#filter>
                        <thead>
                            <tr style="background-color: rgb(26, 179, 148);color: rgb(255, 255, 255);display: table-row;">
                                <th>Estado</th>
                                <th>Titulo/Descripcion</th>
                                <th data-hide="phone,tablet">Usuario</th>
                                <th data-hide="phone,tablet">Proyecto</th>
                                <th data-hide="phone,tablet">Fecha</th>
                                @*<th data-hide="phone,tablet">CSS grade</th>
                                    <th data-hide="phone,tablet">CSS grade</th>*@
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.OrderByDescending(n => n.Fecha))
                            {


                                <tr>
                                    <td>
                                        <span style="background-color: @Html.DisplayFor(modelItem => item.Estado_novedades.color); color:#fff;" class="label pull-right">@Html.DisplayFor(modelItem => item.Estado_novedades.Descripcion)</span>

                                        @*span class="label @Html.DisplayFor(modelItem => item.Estado)">@Html.DisplayFor(modelItem => item.Estado)</span>*@
                                    </td>
                                    <td class="issue-info">
                                        <a href="@Url.Action("Details", "Novedades", new { id = item.Idnovedad })">
                                            @item.Titulo

                                            <small>
                                                @Html.Raw(item.Descripcion)
                                            </small>
                                        </a>
                                    </td>
                                    <td>
                                        @item.Usuario
                                    </td>
                                    <td>
                                        @item.Proyectos.Titulo
                                    </td>
                                    <td>
                                        @item.Fecha
                                    </td>

                                </tr>

                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5">
                                    <ul class="pagination pull-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
    @section Styles {
        @Styles.Render("~/plugins/footableStyles")
    }
    @section Scripts {
        @Scripts.Render("~/plugins/footable")
        <script type="text/javascript">
            $(document).ready(function () {

                $('.footable').footable();
                $('.footable2').footable();


            });
        </script>
    }


