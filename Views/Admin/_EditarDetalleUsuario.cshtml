@model Requerimientos.Models.Usuarios
@{if (Model != null)
    {

        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">Config option 1</a>
                            </li>
                            <li>
                                <a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <h2>
                        Datos de Usuario
                    </h2>
                    <form role="form" class="form-inline">
                        @*<div class="form-group">
                                <label for="exampleInputEmail2" class="sr-only">Email address</label>
                                <input type="email" placeholder="Enter email" id="exampleInputEmail2" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword2" class="sr-only">Password</label>
                                <input type="password" placeholder="Password" id="exampleInputPassword2" class="form-control">
                            </div>
                            <div class="checkbox m-l m-r-xs"><label class="i-checks"> <input type="checkbox"><i></i> Remember me </label></div>
                            <button class="btn btn-white" type="submit">Sign in</button>*@
                        <div id="expanderContent">
                            <table style='width: 100%'>
                                <tr>
                                    <td style='text-align: center; width: 10%; font-weight: bold' class='userTable'>
                                        <label>Nombre</label>
                                    </td>
                                    <td style='width: 28%' class='userTable'>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Nombre, new { @class = "singlelinetextinput form-control" })
                                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                        </div>
                                    </td>

                                    <td style='text-align: center; width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.EMail)
                                    </td>
                                    <td style='width: 28%' class='userTable'>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.EMail, new { @class = "singlelinetextinput form-control"})
                                            @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
                                        </div>
                                    </td>




                                </tr>

                                <tr>

                                    <td style='text-align: center; width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.Area)
                                    </td>

                                    <td style='width: 28%' class='userTable'>
                                        <div class="form-group">


                                            <div class="">
                                                @Html.DropDownList("Idarea", null, "--select--", htmlAttributes: new { @class = "singlelinetextinput form-control", @style = "width:50%" })

                                                @Html.ValidationMessageFor(model => model.Idarea, "", new { @class = "text-danger" })
                                            </div>

                                        </div>
                                    </td>

                                    <td style='text-align: center; width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.Inactivo)
                                    </td>
                                    <td style='width: 50%' class='userTable'>
                                        <div class="form-group">
                                            <div class="">
                                                @Html.EditorFor(model => model.Inactivo, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Inactivo)
                                            </div>
                                        </div>
                                    </td>





                                </tr>











                                <tr>
                                    <td style='text-align: center; width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.Usuario)
                                    </td>
                                    <td style='width: 28%' class='userTable'>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Usuario, new { @class = "singlelinetextinput form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                                        </div>
                                    </td>
                                    <td></td>
                                </tr>
                            </table>
                        </div>
                        <input class="btn btn-primary btn-w-m" type="submit" value="Guardar" />
                    </form>
                </div>
            </div>
        </div>






    }
}
