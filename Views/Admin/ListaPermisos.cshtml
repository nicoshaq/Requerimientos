@model Requerimientos.Models.Permisos
@{
    ViewBag.Title = "Permission Details";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='button']").button();
    });
</script>
<div class="panel">
    <fieldset>
        <legend>
            <h3>
                Permission Details</h3>
        </legend>
        <div>
            <table style='width: 100%'>
                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.Descripcion, "Description")
                    </td>
                    <td class='userTable'>
                        @Html.DisplayFor(model => model.Descripcion)
                    </td>
                </tr>                
            </table>
            <br />
            <input type="button" value="Edit Permission" onclick="location.href='@Url.Action("EditarPermiso", "Admin", new { id = Model.Permiso_Id })'" />            
        </div>
        <br />
    </fieldset>    
    <div>
        <fieldset>
            <legend>
                <h3>
                    Roles Associated with this Permission</h3>
            </legend>
            <div id="RolesTable">
                @Html.Partial("_ListaRoles4Permisos", Model)
            </div>
        </fieldset>
    </div>
</div>
<div>
    @Html.ActionLink("Go to Permissions", "PermisosIndex", "Admin")  
</div>