                                    </td>
                                    <td class='userTable'>
                                        <div class="form-group">
                                            @Html.TextBoxFor(model => model.Descripcion, new { @class = "singlelinetextinput form-control" })
                                            @Html.ValidationMessageFor(model => model.Descripcion)
                                        </div>
                                    </td>
                                </tr>

                                <tr>
                                    <td style='text-align: center; width: 10%; font-weight: bold' class='userTable'>
                                        @Html.LabelFor(model => model.EsAdmin, "EsAdmin")
                                    </td>
                                    <td style='width: 20%' class='userTable'>
                                        
                                        @Html.EditorFor(model => model.EsAdmin, new { @class = "i-checks" })
