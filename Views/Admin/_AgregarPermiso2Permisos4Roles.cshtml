@model Requerimientos.Models.ROLES


<script type="text/javascript">
    $(document).ready(function () {     
        $('#AddPermission').click(function () {               
            var _permisoId = $('#permisoId').val();            
            var _roleId = $('#Rol_Id').val();


            if (_permisoId == '') {
                return false;
            }

            var _parameters = { permisoId: _permisoId, id: _roleId };
            $.ajax({
                url: "/Admin/AddPermission2RoleReturnPartialView",
                type: "GET",
                data: _parameters,
                success: function (data, textStatus, jqXHR) {
                    $('#PermissionsTable').html(data);
                    $('#permisoId').val("");
                }
            });
        });

        $('#AddAllPermissions').click(function () {
            var _roleId = $('#Rol_Id').val();
            var _parameters = { id: _roleId };
            $.ajax({
                url: "/Admin/AddAllPermissions2RoleReturnPartialView",
                type: "GET",
                data: _parameters,
                success: function (data, textStatus, jqXHR) {
                    $('#PermissionsTable').html(data);
                    $('#permisoId').val("");
                }
            });
        });    
    });
</script>








