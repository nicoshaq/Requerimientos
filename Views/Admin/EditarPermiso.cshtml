@model Requerimientos.Models.Permisos 
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
        $(":input[type='button']").button();
    });
</script>
<div class="panel">
    <fieldset>
        <legend>
            <h3>Permission Details</h3>
        </legend>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.Permiso_Id)
            <table style='width: 100%'>
                <tr>
                    <td style='width: 120px;font-weight: bold'>
                        @Html.LabelFor(model => model.Descripcion, "Description")
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Descripcion, new { style = "width:450px" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </td>
                </tr>
            </table>
            <br />
            <input type="submit" value="Update Permission" />
            <br />
            <br />
        }
    </fieldset>
</div>
<br />
<div>
    <br />
    <fieldset>
        <legend>
            <h3>
                Roles Associated with this Permission
            </h3>
        </legend>

        <div id="RolesTable">
            @Html.Partial("_ListaRoles4Permisos", Model)
        </div>
        <div>
            @Html.Partial("_AgregarRoles4Permisos", Model)
        </div>
        <br />
        <div>
            @Html.ActionLink("Go to Permissions", "PermisosIndex", "Admin")
        </div>
    </fieldset>

</div>
<br />
<div>
    @Html.ActionLink("Go to Permissions", "PermisosIndex", "Admin")
</div>
