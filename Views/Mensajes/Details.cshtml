      var fecha = parseFloat(data[3]) || 0; // use data for the age column

      if ((isNaN(min) && isNaN(max)) ||
           (isNaN(min) && fecha <= max) ||
           (min <= fecha && isNaN(max)) ||
           (min <= fecha && fecha <= max)) {
          return true;
      }
      return false;
  }
);




