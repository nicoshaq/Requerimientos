@model Requerimientos.Models.Mensajes

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<style>

    .mensaje {
          
    padding: 40px;
    }
    .Aceptado {
        background-color:#1ab394;
        color: #FFFFFF;
    }

    .Incosistente {
        background-color: #f0ad4e;
        color: #FFFFFF;
    }

    .Rechazado {
        background-color: #ff0000;
        color: #FFFFFF;
    }


       .Delegado {
        background-color: #0094ff;
        color: #FFFFFF;
    }

 .Activo {
        background-color: #1ab394;
        color: #FFFFFF;
